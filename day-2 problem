#include <iostream>

using namespace std;

int main()
{
    int a[4]={1,2,3,4},left[10],right[10],i,sum1=0,sum2=0;
    cout<<"elements in left array are:"<<endl;
    for(i=0;i<2;i++)
    {
        left[i]=a[i];
        cout<<left[i];
        sum1=sum1+left[i];


    }
    cout<<endl;
    cout<<"elements in right array are:"<<endl;
    for(i=2;i<=3;i++)
    {
        right[i]=a[i];
        cout<<right[i];
        sum2=sum2+right[i];
    }

    cout<<"product="<<sum1*sum2;
    return 0;
}
